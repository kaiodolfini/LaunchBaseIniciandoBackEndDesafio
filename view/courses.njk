{% extends "layout.njk" %}

{% block content %}

    {% block head %}
        <title>Cursos - Desafio 3</title>
    {% endblock %}

    <section class="cards">
        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card_image-container">
                    <img src="{{item.image}}" alt="Imagem de {{item.id}}">
                </div>
                <div class="card_content">
                    <p>{{item.title}}</p>
                </div>
                <div class="card_info">
                    <p>{{item.modules}}</p>
                    <p class="card_price">
                        {{item.price}}
                    </p>
                </div>
            </div>
        {% endfor %}
    </section>

    <script src="/scripts.js"></script>

{% endblock %}