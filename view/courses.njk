{% extends "layout.njk"%}

{% block content %}

    {% block head %}
        <title>Cursos - Desafio 3</title>
    {% endblock %}

    <section class="cards">
        {% for item in items %}
            <div class="card" id="{{course.id}}">
                <div class="card_image-container">
                    <img src= "{{item.image}}" alt="Imagem de {{item.id}}">
                </div>
                <div class="card_content">
                    <p>{{item.title}}</p>
                </div>
                <div class="card_info">
                    <p>{{item.modules}}</p>
                    <p class="card_price">
                       {{item.price}}
                    </p>
                </div>
            </div>
        {% endfor %}
    </section>

    <div class="modal-overlay">
        <div class="modal">
            <div class="close-modal">
                <i class="material-icons">close</i>
            </div>
            <div class="maximize-modal">
                <span class="material-icons">maximize</span>
            </div>

            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>

            </div>
        </div>
    </div>

    <script src="scripts.js"></script>

{% endblock %}